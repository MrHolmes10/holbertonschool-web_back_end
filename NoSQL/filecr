#!/bin/bash

# İstifadə: ./createfile.sh filename.sh
# Fayl adı arqument kimi verilməlidir
if [ -z "$1" ]; then
  echo "İstifadə: $0 fayl_adi"
  exit 1
fi

filename="$1"

# Əgər fayl artıq mövcuddursa xəbərdarlıq et
if [ -e "$filename" ]; then
  echo "⚠️  $filename artıq mövcuddur!"
  exit 1
fi

# Faylı yaradıb ilk 2 sətri yaz
cat <<EOF > "$filename"
EOF

# Faylı icra edilə bilən et
chmod +x "$filename"
echo "✅ $filename yaradıldı və icra hüququ verildi."
nano "$filename"

